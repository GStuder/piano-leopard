<document xmlns="http://maven.apache.org/changes/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
    <properties>
        <title>Piano Leopard</title>
        <author email="jstuder@kreatious.net">Jay-R Studer</author>
    </properties>
    <body>
        <release version="1.1.1" date="2015-03-17" description="Enhancement release">
            <action dev="jstuder" type="fix"> Fix played notes not
                being removed when restarting the current song.
            </action>
        </release>
        <release version="1.1" date="2015-03-13" description="Enhancement release">
            <action dev="jstuder" type="update"> Performance improvements
                to reduce memory consumption rate.
            </action>
            <action dev="jstuder" type="add" system="GitHub"
                issue="1"> Add option to select lighted keyboard channel.
            </action>
            <action dev="jstuder" type="add" system="GitHub"
                issue="2"> Remap the output channels that conflict with the
                selected lighted keyboard channel.
            </action>
            <action dev="jstuder" type="add"> Add feature to track the
                number of times a file was practiced.
            </action>
        </release>
        <release version="1.0" date="2015-03-05" description="Initial release">
            <action dev="jstuder" type="add"> Initial release of Piano
                Leopard. Requires at least Java 8.
            </action>
        </release>
    </body>
</document>